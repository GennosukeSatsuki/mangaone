{
  "name": "mangaone",
  "private": true,
  "version": "0.0.1",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder",
    "build:mac": "tsc -b && vite build && electron-builder --mac",
    "build:win": "tsc -b && vite build && electron-builder --win",
    "build:linux": "tsc -b && vite build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.mangaone.app",
    "productName": "MangaOne",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "public/icon.png"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "browser-image-compression": "^2.0.2",
    "framer-motion": "^12.23.26",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
